@model TRPR.Models.PaperInfo

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>PaperInfo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="PaperTitle" class="control-label"></label>
                <input asp-for="PaperTitle" class="form-control" />
                <span asp-validation-for="PaperTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaperAbstract" class="control-label"></label>
                <input asp-for="PaperAbstract" class="form-control" />
                <span asp-validation-for="PaperAbstract" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaperTypeID" class="control-label"></label>
                <select asp-for="PaperTypeID" class="form-control" asp-items="ViewBag.PaperTypeID">
                    <option>Select a Paper Type</option>
                </select>
                <span asp-validation-for="PaperTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaperLength" class="control-label"></label>
                <input asp-for="PaperLength" class="form-control" />
                <span asp-validation-for="PaperLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusID" class="control-label"></label>
                <input asp-for="StatusID" class="form-control" />
                <span asp-validation-for="StatusID" class="text-danger"></span>
            </div>
            <div class="col-md-8">
                <div class="form-group col-md-6">
                    <label class="control-label"> Expertises Chosen </label> <button type="button" id="btnRight" class="btn btn-danger btn-sm">
                        <span class="glyphicon glyphicon-minus-sign" aria-hidden="true"></span>
                    </button>
                    @Html.ListBox("selectedOptions", (MultiSelectList)ViewBag.selOpts, new { @size = 10, @class = "form-control" })

                </div>

                <div class="form-group col-md-6">
                    <label class="control-label"> Choose Expertises </label> <button type="button" id="btnLeft" class="btn btn-success btn-sm">
                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                    </button>
                    @Html.ListBox("availOptions", (MultiSelectList)ViewBag.availOpts, new { @size = 10, @class = "form-control" })

                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_MultiselectPartial");}
}
