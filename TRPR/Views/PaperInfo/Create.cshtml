                                }
                            </div>
                            <div class="modal-footer"></div>
                        </div>
                    </div>
                </div>*@
            <h4>My Co-Authors</h4>

            @*<div class="form-group">
                <label class="control-label">Related File:</label>
                <input type="file" class="" multiple="multiple" name="theFiles" /><br />
            </div>*@

            <div id="fileUploader" class="form-group">

                <partial name="~/Views/Shared/_fileUploader.cshtml" />
            </div>

            <div class="form-group">
                <input type="submit" name="actionButton" value="Save and Close" class="btn btn-default" />
                <input type="submit" name="actionButton" value="Save and Submit" class="btn btn-default" />
            </div>
        </form>
    </div>

    <div class="modal fade" id="addCoAuthorModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" style="display:inline;">REGISTER</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @{
                        var doc = new TRPR.Models.Researcher();
                        Html.RenderPartial("_coAuthorRegistration", doc);
                    }
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Cancel" class="btn btnMedG" />
                    <input type="submit" value="Save" class="btn btnMedP" id="btnCoAuthCreate" />
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("#addCoAuthorModal").on("hidden.bs.modal", function () {
    });
    $("#btnCoAuthCreate").click(function (event) {
        event.preventDefault();
        var form = $("#createCoAuthorForm");
        if (form.valid()) {
            $a.ajax({
                type: "POST",
                url: form.attr("action"),
                data: form.serialize()
            })
                .success(function () {
                    $("#addCoAuthorModal").modal(hide);
                })
                .error(function () {
                    alert("Create Failed. There was a problem adding the Co-Author.");
                });
        }
        return false;
    });

</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
