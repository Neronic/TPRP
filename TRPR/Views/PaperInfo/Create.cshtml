@model TRPR.Models.PaperInfo

@{
    ViewData["Title"] = "New Submission";
}

<div class="page" id="submissionPage">
    <div id="dashHead">
        <h4 style="display: inline">@ViewData["Title"]</h4>
        <input type="button" class="btnMedP" value="Save and Close" />
    </div>
    <div>
        <form asp-action="Create" method="post" enctype="multipart/form-data" id="submissionFrm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PaperTypeID" class="control-label"></label>
                <select asp-for="PaperTypeID" class="form-control" asp-items="ViewBag.PaperTypeID">
                    <option>Select a Paper Type</option>
                </select>
                <span asp-validation-for="PaperTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaperTitle" class="control-label"></label>
                <textarea asp-for="PaperTitle" type="text" class="form-control"></textarea>
                <span asp-validation-for="PaperTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthoredPapers" class="control-label">Biography (Max 60 Words)</label>
                <textarea asp-for="AuthoredPapers" type="text" class="form-control" rows="4"></textarea>
                <span asp-validation-for="AuthoredPapers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaperAbstract" class="control-label"></label>
                <textarea asp-for="PaperAbstract" type="text" class="form-control" rows="20"></textarea>
                <span asp-validation-for="PaperAbstract" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaperKeywords" class="control-label"></label>
                <textarea asp-for="PaperKeywords" class="form-control" typeof="text"></textarea>
                <span asp-validation-for="PaperKeywords" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaperLength" class="control-label"></label>
                <textarea asp-for="PaperLength" class="form-control" typeof="text"></textarea>
                <span asp-validation-for="PaperLength" class="text-danger"></span>
            </div>
                <input type="hidden" name="StatusID" value="3" />
            <h5>Co-Author</h5>
            <input type="text" placeholder="Email" class="form-control" style="width:250px; display:inline; margin-top:8px;">
            <button class="btnMedG">Search</button>
            <button class="btnMedP" id="addNewCoAuthor" data-toggle="modal" data-target="#addCoAuthorModal" type="button">Add New Author</button>


            <!-----------------------------------------------Modal Popup--------------------------------------------------------->
