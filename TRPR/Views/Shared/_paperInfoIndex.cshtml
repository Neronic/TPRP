@model IEnumerable<TRPR.Models.PaperInfo>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PaperTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaperAbstract)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaperType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaperLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaperTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaperAbstract)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaperType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaperLength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
