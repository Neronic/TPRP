@model TRPR.Models.Researcher

@using (Html.BeginForm("Create", "Researchers", FormMethod.Post, htmlAttributes: new { id = "createCoAuthorForm" }))
{
<h4>REGISTER</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="_coAuthorRegistration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TitleID" class="control-label"></label>
                <select asp-for="TitleID" class="form-control" asp-items="ViewBag.TitleID">
                    <option>Select a title</option>
                </select>
                <span asp-validation-for="TitleID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResFirst" class="control-label"></label>
                <input asp-for="ResFirst" class="form-control" />
                <span asp-validation-for="ResFirst" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResMiddle" class="control-label"></label>
                <input asp-for="ResMiddle" class="form-control" />
                <span asp-validation-for="ResMiddle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResLast" class="control-label"></label>
                <input asp-for="ResLast" class="form-control" />
                <span asp-validation-for="ResLast" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResEmail" class="control-label"></label>
                <input asp-for="ResEmail" class="form-control" />
                <span asp-validation-for="ResEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResBio" class="control-label"></label>
                <input asp-for="ResBio" class="form-control" />
                <span asp-validation-for="ResBio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cancel" class="btn btnMedG" />
                <input type="submit" value="Save" class="btn btnMedP" id="btnCoAuthCreate"/>
            </div>
        </form>
    </div>
</div>
}
